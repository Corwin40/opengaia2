{% extends 'admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('ecomm/product/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('ecomm/product/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>CreateAt</th>
                                <th>UpdateAt</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.Description }}</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                            <li>
                                                <a class="dropdown-item" href="#" id="btn_update_member" data-bs-toggle="modal" data-bs-target="#op_update_member" data-bs-whatever="{{ data|json_encode }}">
                                                    <i class="fas fa-user-edit fa-xs"></i> Modification rapide
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ path('op_ecomm_product_edit', {'id': product.id}) }}">
                                                    <i class="fas fa-eye fa-xs"></i> Voir la fiche
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <p class="text-danger"><i class="fas fa-trash fa-xs"></i> Supprimer</p>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
