{% extends 'admin.html.twig' %}

{% block title %}Members{% endblock %}

{% block content %}
    <h1>Fiche de membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Identifiant :</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>Prénom & Nom :</th>
                <td>{{ member.firstName }} {{ member.lastName }}</td>
            </tr>

            <tr>
                <th>Email: </th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Roles :</th>
                <td>{{ member.roles ? member.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Fiche crée le :</th>
                <td>{{ member.createAt ? member.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fiche Modifiée le :</th>
                <td>{{ member.updateAt ? member.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>L'adresse Email a été vérifiée :</th>
                <td>{{ member.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_admin_member_index') }}"><i class="far fa-arrow-alt-circle-left"></i></a>

    <a href="{{ path('op_admin_member_edit', {'id': member.id}) }}"><i class="fas fa-user-edit"></i></a>

    {{ include('admin/member/_delete_form.html.twig') }}
{% endblock %}
