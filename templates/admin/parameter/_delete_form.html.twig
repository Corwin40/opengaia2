<form method="post" action="{{ path('op_admin_parameter_delete', {'id': parameter.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parameter.id) }}">
    <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
</form>
