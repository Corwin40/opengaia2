{% extends 'admin.html.twig' %}

{% block title %}Page index{% endblock %}

{% block content %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>State</th>
                <th>IsMenu</th>
                <th>MetaKeywords</th>
                <th>MetaDescription</th>
                <th>Tags</th>
                <th>PublishAt</th>
                <th>PublishEnd</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.state }}</td>
                <td>{{ page.isMenu ? 'Yes' : 'No' }}</td>
                <td>{{ page.metaKeywords ? page.metaKeywords|join(', ') : '' }}</td>
                <td>{{ page.metaDescription }}</td>
                <td>{{ page.tags ? page.tags|join(', ') : '' }}</td>
                <td>{{ page.publishAt ? page.publishAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.publishEnd ? page.publishEnd|date('Y-m-d') : '' }}</td>
                <td>{{ page.createAt ? page.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updateAt ? page.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('op_webapp_page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('op_webapp_page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('op_webapp_page_new') }}">Create new</a>
{% endblock %}
